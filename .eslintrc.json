{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": [
      "error",
      "tab"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "keyword-spacing": "error",
    "no-unused-vars": [
      "error",
      {"args": "none"}
    ],
    "comma-spacing": [
      "error",
      { "before": false, "after": true }
    ]
  }
}
